FROM node:20-alpine

# Set working directory
WORKDIR /app

# Expose development port 
EXPOSE 3000

# Start development server - only when container starts
# Note: This is just a placeholder - actual package.json and source code will be mounted
CMD ["sh", "-c", "if [ -f package.json ]; then npm i && npm run dev -- --host 0.0.0.0; else echo 'No package.json found. Volume mount issue?' && exit 1; fi"]
