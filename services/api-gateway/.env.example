# FastAPI API Gateway Environment Configuration

# Basic settings
ENVIRONMENT=development
DEBUG=true
PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Service URLs
AUTH_SERVICE_URL=http://localhost:8001
GIG_SERVICE_URL=http://localhost:8002
BOOKING_SERVICE_URL=http://localhost:8003
PAYMENT_SERVICE_URL=http://localhost:8004
MESSAGE_SERVICE_URL=http://localhost:8005
USER_SERVICE_V2_URL=http://localhost:8006
REVIEW_SERVICE_URL=http://localhost:8007

# Timeout settings (in seconds)
REQUEST_TIMEOUT=30
AUTH_TIMEOUT=5

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1/minute

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api_gateway.log
